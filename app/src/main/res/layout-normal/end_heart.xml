<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/dialog_fon"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="10dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="20dp"
                  android:gravity="center"
    >
        <TextView
                android:text="@string/your_result"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"
                android:textColor="#000000" android:textSize="24sp"/>
        <TextView
                android:text="999"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/your_result" android:textAlignment="center"
                android:textColor="#000000" android:textSize="80sp"/>
        <Button
                android:layout_marginTop="10dp"
                android:text="@string/repeat"
                android:background="@drawable/button_press_blak_rose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/end_heart_resum" android:textSize="24sp"/>
        <Button
                android:layout_marginTop="10dp"
                android:text="@string/menu"
                android:background="@drawable/button_press_blak_rose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/end_heart_menu" android:textSize="24sp"/>
    </LinearLayout>

</LinearLayout>